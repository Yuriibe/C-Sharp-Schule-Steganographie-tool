<Window x:Class="SteganographyToolUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sidebar Menu" Height="600" Width="800">

    <Grid>
        <!-- Sidebar -->
        <StackPanel Background="#333" Width="200" VerticalAlignment="Stretch" DockPanel.Dock="Left">
            <Button Content="Home" Click="BtnEncode_Click" Foreground="White" Background="#555" Padding="10"/>
        
        </StackPanel>

        <!-- Main Content Area -->
        <ContentControl x:Name="MainContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                        Margin="200,0,0,0"/>
    </Grid>
</Window>
